@model ReservationModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="ChangeParametersForGuestReservation" asp-controller="Admin">
    <div class="form-group">
        <label asp-for="StartDate">Дата заселения</label>
        <input type="date" asp-for="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")">
    </div>
    <div class="form-group">
        <label asp-for="EndDate">Дата выселения</label>
        <input type="date" asp-for="EndDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
    </div>
    <div class="form-group">
        <label asp-for="CheckIn">Человек заехал?</label>
        <select asp-for="CheckIn">
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CheckOut">Человек выехал?</label>
        <select asp-for="CheckOut">
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Редактировать">
    </div>   
</form>
