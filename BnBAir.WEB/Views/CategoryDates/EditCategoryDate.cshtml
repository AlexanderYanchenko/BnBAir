@model CategoryDateModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

    <form asp-action="EditCategoryDate" asp-controller="CategoryDates">
        <div class="form-group">
            <label asp-for="StartDate">Дата начала стоимости</label>
            <input type="date" asp-for="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" >
        </div>
        <div class="form-group">
            <label asp-for="EndDate">Дата окончания стоимости</label>
            <input type="date" asp-for="EndDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
        </div>        
        <div class="form-group">
            <label asp-for="Price">Стоимость</label>
            <input type="number" asp-for="Price" class="form-control" placeholder="@Model.Price" >
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Редактировать">
        </div>
    </form>

