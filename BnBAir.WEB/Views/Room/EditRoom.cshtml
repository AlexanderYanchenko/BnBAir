@model RoomModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="container">
    <form asp-action="EditRoom" asp-controller="Room">
        <div class="form-group">
            <label asp-for="Number">Номер комнаты</label>
            <input type="number" asp-for="Number" class="form-control" value="@Model.Number">
        </div>
        <div class="form-group">
            <label asp-for="Category.CategoryId">Категория</label>
            <select asp-for="Category.CategoryId" asp-items="ViewBag.Categories" name="" id="" class="form-control"></select>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Редактировать">
        </div>
    </form>
</div>

