@model System.Collections.Generic.List<BnBAir.WEB.Models.RoomModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <form method="get">
        <div class="form-group row">
            <div class="form-group col-md-4">
                <label class="control-label" >Дата заселения</label>
                <input type="date" name="startDate" class="form-control">
            </div>
            <div class="form-group col-md-4">
                <label class="control-label" >Дата выселения</label>
                <input type="date" name="endDate" class="form-control">
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">&nbsp;</label>
                <input type="submit" value="Поиск по датам" class="btn btn-secondary form-control"/>
            </div>
        </div>
    </form>
    @foreach (var room in Model)
        {
            <div class="card col-md-4 float-md-left" style="width: 18rem; margin-right: 4rem; margin-bottom: 4rem">
                <img src="https://brilliant24.ru/files/cat/template_01.png" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">@room.Category.Name</h5>
                    <p class="card-text">Номер комнаты: @room.Number</p>
                    <p class="card-text">Количество кроватей: @room.Category.Bed</p>
                    <p class="card-text">Стоимость: @room.Category.CategoryDates.First().Price</p>
                    <a href="~/Guest/BookRoom/@room.RoomId" class="btn btn-primary stretched-link">Забронировать</a>
                </div>
            </div>
        }
</div>

