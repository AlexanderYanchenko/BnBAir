@model BnBAir.WEB.Models.RoomModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="container">
    <form asp-action="AddRoom" asp-controller="Room">
        <div class="form-group">
            <label asp-for="Number">Номер комнаты</label>
            <input type="number" asp-for="Number" class="form-control" value="">
        </div>
       <div class="form-group">
               <label asp-for="Category.CategoryId">Номер комнаты</label>
               <select asp-for="Category.CategoryId" asp-items="ViewBag.Categories" class="form-control">
                   <option selected></option>
               </select>
           </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Добавить комнату">
        </div>
    </form>
</div>
