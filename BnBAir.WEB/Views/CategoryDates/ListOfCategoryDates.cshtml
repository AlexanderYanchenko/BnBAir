@model System.Collections.Generic.List<BnBAir.WEB.Models.CategoryDateModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="container">
<a href="~/CategoryDates/AddCategoryDate/">Добавить новую комнату</a>
<table class="table table-hover">
        <thead>
        <tr>
            <th>Дата начала стоимости</th>
            <th>Дата окончания стоимости</th>
            <th>Стоимость</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var categoryDate in Model)
        {
            <tr>
                <td>@categoryDate.StartDate.ToShortDateString()</td>
                <td>@categoryDate.EndDate.ToShortDateString()</td>
                <td>@categoryDate.Price</td>
                <td>
                    <a href="~/CategoryDates/EditCategoryDate/@categoryDate.CategoryDateId" class="btn btn-outline-primary btn-sm">Изменить</a>&nbsp;|&nbsp;<a href="~/CategoryDate/DeleteCategoryDate/@categoryDate.CategoryDateId" class="btn btn-outline-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
        
    </table>    
</div>
