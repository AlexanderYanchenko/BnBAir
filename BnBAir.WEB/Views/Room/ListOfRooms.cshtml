@model System.Collections.Generic.List<BnBAir.WEB.Models.RoomModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="container">
<a href="~/Room/AddRoom/">Добавить новую комнату</a>
<table class="table table-hover" id="reservationTable">
        <thead>
        <tr>
            <th>Номер комнаты</th>
            <th>Категория</th>
            <th>Количество кроватей</th>
            <th>Стоимость</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Number</td>
                <td>@room.Category.Name</td>
                <td>@room.Category.Bed</td>
                <td>@room.Category.CategoryDates.First().Price</td>
                <td>
                    <a href="~/Room/EditRoom/@room.RoomId" class="btn btn-outline-primary btn-sm">Изменить</a>&nbsp;|&nbsp;<a href="~/Room/DeleteRoom/@room.RoomId" class="btn btn-outline-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
        
    </table>    
</div>

